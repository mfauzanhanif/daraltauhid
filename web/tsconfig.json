{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        
        // Konfigurasi Path Baru
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "@shared/*": ["./resources/js/shared/*"],
            "@actions/*": ["./resources/js/actions/*"],
            "@app/*": ["./resources/js/APP/*"],
            "@ppdt/*": ["./resources/js/PPDT/*"]
        }
    },
    "include": ["resources/js/**/*"]
}